{
    "swagger": "2.0",
    "info": {
      "description": "API para gerenciamento de escolas, incluindo operações CRUD, upload e leitura de dados de um arquivo Excel.",
      "version": "1.0.0",
      "title": "Back-end API de Gerenciamento de Escolas"
    },
    "host": "localhost:5005",
    "basePath": "/",
    "tags": [
      {
        "name": "escolas",
        "description": "Operações sobre escolas"
      }
    ],
    "schemes": ["http"],
    "paths": {
      "/insertEscola": {
        "post": {
          "tags": ["escolas"],
          "summary": "Inserir uma nova escola",
          "description": "Insere uma nova escola à base de dados.",
          "consumes": ["application/json"],
          "produces": ["application/json"],
          "parameters": [
            {
              "in": "body",
              "name": "body",
              "description": "Objeto Escola que precisa ser inserido à base de dados",
              "required": true,
              "schema": {
                "$ref": "#/definitions/Escola"
              }
            }
          ],
          "responses": {
            "201": {
              "message": "Escola inserida com sucesso"
            },
            "404": {
                "error": [
                    "Provincia invalida",
                    "Erro ao inserir a escola",
                    "error"
                ]
            }
          }
        }
      },
      "get": {
        "tags": ["escolas"],
        "summary": "Lista todas as escolas",
        "description": "Retorna uma lista de todas as escolas cadastradas na base de dados.",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "message": "Operação bem-sucedida",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Escola"
              }
            }
          }
        }
      },
      "/escolas/{id}": {
        "get": {
          "tags": ["escolas"],
          "summary": "Encontra escola pelo ID",
          "description": "Retorna uma única escola.",
          "produces": ["application/json"],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "description": "ID da escola a retornar",
              "required": true,
              "type": "integer",
              "format": "int64"
            }
          ],
          "responses": {
            "200": {
              "description": "Operação bem-sucedida",
              "schema": {
                "$ref": "#/definitions/Escola"
              }
            },
            "404": {
              "description": "Escola não encontrada"
            }
          }
        },
        "put": {
          "tags": ["escolas"],
          "summary": "Atualiza uma escola",
          "description": "Atualiza os dados da escola especificada pelo ID.",
          "consumes": ["application/json"],
          "produces": ["application/json"],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "description": "ID da escola que precisa ser atualizada",
              "required": true,
              "type": "integer",
              "format": "int64"
            },
            {
              "in": "body",
              "name": "body",
              "description": "Objeto Escola que precisa ser atualizado",
              "required": true,
              "schema": {
                "$ref": "#/definitions/Escola"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Escola atualizada"
            },
            "404": {
              "description": "Escola não encontrada"
            }
          }
        }
      }
    },
    "definitions": {
      "Escola": {
        "type": "object",
        "required": ["nome", "email", "salas", "provincia"],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "nome": {
            "type": "text"
          },
          "email": {
            "type": "text"
          },
          "salas": {
            "type": "integer"
          },
          "provincia": {
            "type": "text"
          },
          "data": {
            "type": "date"
          }
        }
      }
    }
  }
  